<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorSurface"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_12dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_user_photo"
            android:layout_width="@dimen/user_photo_width"
            android:layout_height="@dimen/user_photo_height"
            app:shapeAppearanceOverlay="@style/UserPhotoShape"
            android:scaleType="centerCrop"
            android:contentDescription="@string/user_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/sample_photo" />

        <TextView
            android:id="@+id/tv_user_name_surname"
            style="?attr/textAppearanceTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16dp"
            android:fontFamily="@font/roboto_bold"
            app:layout_constraintBottom_toTopOf="@id/tv_scan_info"
            app:layout_constraintStart_toEndOf="@+id/iv_user_photo"
            app:layout_constraintTop_toTopOf="@+id/iv_user_photo"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Name Surname" />

        <TextView
            android:id="@+id/tv_scan_info"
            style="?attr/textAppearanceBodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_16dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_user_photo"
            app:layout_constraintStart_toEndOf="@+id/iv_user_photo"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_name_surname"
            android:text="@string/scan_info"
            tools:text="08:15PM, Expired" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>